<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Registro"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:gravity="center"
        android:id="@+id/registro2"
        />

    <EditText
        android:id="@+id/Nombre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registro2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#30000000"
        android:hint="Nombre"
        android:padding="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Contrase単a2"
        android:hint="Contrase単a"
        android:layout_below="@id/Nombre2"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="#30000000"
        android:inputType="textPassword"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonRegistro2"
        android:layout_below="@id/Contrase単a2"
        android:text="Registrarse"
        android:backgroundTint="#ff66ccff"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_alignRight="@id/registro2"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonvolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Contrase単a2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/botonRegistro2"
        android:backgroundTint="#ff66ccff"
        android:text="Volver" />

</RelativeLayout>