<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:gravity="center"
        android:id="@+id/entrar"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Nombre"
        android:hint="Nombre"
        android:layout_below="@id/entrar"
        android:background="#30000000"
        android:layout_margin="20dp"
        android:padding="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Contrase単a"
        android:hint="Contrase単a"
        android:layout_below="@id/Nombre"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="#30000000"
        android:inputType="textPassword"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonlogin"
        android:layout_below="@id/Contrase単a"
        android:text="Entrar"
        android:backgroundTint="#ff66ccff"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_alignRight="@id/entrar"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/botonRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/botonlogin"
        android:layout_below="@id/Contrase単a"
        android:backgroundTint="#ff66ccff"

        android:layout_margin="20dp"
        android:text="Registrarse" />

</RelativeLayout>